<hide_price_zero_line.xml>
<record id="view_order_line_hide_price_zero" model="ir.ui.view">
    <field name="name">order.line.hide.price.zero</field>
    <field name="model">sale.order.line</field>
    <field name="arch" type="xml">
        <tree>
            <field name="product_id"/>
            <field name="product_uom_qty"/>
            <field name="price_unit" attrs="{'invisible': [('price_unit', '=', 0)]}"/>
            <field name="price_subtotal" attrs="{'invisible': [('price_subtotal', '=', 0)]}"/>
        </tree>
    </field>
</record>
</hide_price_zero_line.xml>